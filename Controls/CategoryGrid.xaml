<Grid x:Class="Exam_Formatter.Controls.CategoryGrid"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      d:DesignHeight="750"
      d:DesignWidth="650"
      mc:Ignorable="d">

    <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>

    <Grid Grid.Row="0"
          Grid.Column="0"
          Grid.ColumnSpan="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0"
               Grid.Column="0"
               VerticalAlignment="Center"
               Content="Question Type:"
               FontFamily="Segoe UI"
               FontSize="14"
               FontWeight="Bold"
               Padding="5,0,5,0" />
        <Label Grid.Row="0"
               Grid.Column="1"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Content="Question Text:"
               FontFamily="Segoe UI"
               FontSize="14"
               FontWeight="Bold"
               Padding="5,0,5,0" />

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Height="Auto"
                    Margin="5"
                    VerticalAlignment="Stretch">
            <RadioButton Name="MultiSingleRadioButton"
                         Margin="5"
                         GroupName="QuestionType"
                         IsChecked="True">
                <RadioButton.Content>
                    <TextBlock Text="Multiple Choice - Single Answer" TextWrapping="Wrap" />
                </RadioButton.Content>
            </RadioButton>
            <RadioButton Name="MultiSingleNoShuffleRadioButton"
                         Margin="5"
                         GroupName="QuestionType">
                <RadioButton.Content>
                    <TextBlock Text="Multiple Choice - Single Answer - No Shuffling" TextWrapping="Wrap" />
                </RadioButton.Content>
            </RadioButton>
            <RadioButton Name="MultiSelectRadioButton"
                         Margin="5"
                         GroupName="QuestionType">
                <RadioButton.Content>
                    <TextBlock Text="Multiple Choice - Select All" TextWrapping="Wrap" />
                </RadioButton.Content>
            </RadioButton>
            <RadioButton Name="TrueFalseRadioButton"
                         Margin="5"
                         Checked="TrueFalseRB_OnChecked"
                         Content="True / False"
                         FontSize="14"
                         GroupName="QuestionType"
                         Unchecked="TrueFalseRB_OnUnchecked" />
        </StackPanel>

        <TextBox Name="QuestionTextTextBox"
                 Grid.Row="1"
                 Grid.Column="1"
                 FontSize="14"
                 TextWrapping="Wrap" />
    </Grid>

    <Grid Grid.Row="1" Grid.Column="0">
        <DockPanel LastChildFill="True">
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       HorizontalAlignment="Left"
                       Content="Answer 1:"
                       FontWeight="Bold" />
                <CheckBox Name="Answer1CheckBox"
                          Grid.Column="2"
                          Checked="StyleCorrectCheckbox"
                          Content="Correct"
                          Foreground="Green"
                          IsChecked="True"
                          Unchecked="StyleIncorrectCheckbox" />
            </Grid>
            <TextBox Name="AnswerOneTextBox"
                     FontSize="14"
                     TextWrapping="Wrap"
                     controls:TextBoxHelper.ClearTextButton="True" />
        </DockPanel>
    </Grid>

    <Grid Grid.Row="2" Grid.Column="0">
        <DockPanel LastChildFill="True">
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       Height="25"
                       Content="Answer 2:"
                       DockPanel.Dock="Top"
                       FontWeight="Bold" />
                <CheckBox Name="Answer2CheckBox"
                          Grid.Column="2"
                          Checked="StyleCorrectCheckbox"
                          Content="Incorrect"
                          Foreground="Red"
                          Unchecked="StyleIncorrectCheckbox" />
            </Grid>
            <TextBox Name="AnswerTwoTextBox"
                     FontSize="14"
                     TextWrapping="Wrap"
                     controls:TextBoxHelper.ClearTextButton="True" />
        </DockPanel>
    </Grid>

    <Grid Grid.Row="3" Grid.Column="0">
        <DockPanel LastChildFill="True">
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       Height="25"
                       Content="Answer 3:"
                       FontWeight="Bold" />

                <CheckBox Name="Answer3CheckBox"
                          Grid.Column="2"
                          Checked="StyleCorrectCheckbox"
                          Content="Incorrect"
                          Foreground="Red"
                          Unchecked="StyleIncorrectCheckbox" />
            </Grid>
            <TextBox Name="AnswerThreeTextBox"
                     FontSize="14"
                     TextWrapping="Wrap"
                     controls:TextBoxHelper.ClearTextButton="True" />
        </DockPanel>
    </Grid>

    <Grid Grid.Row="4" Grid.Column="0">
        <DockPanel LastChildFill="True">
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       Height="25"
                       Content="Answer 4:"
                       DockPanel.Dock="Top"
                       FontWeight="Bold" />

                <CheckBox Name="Answer4CheckBox"
                          Grid.Column="2"
                          Checked="StyleCorrectCheckbox"
                          Content="Incorrect"
                          Foreground="Red"
                          Unchecked="StyleIncorrectCheckbox" />
            </Grid>
            <TextBox Name="AnswerFourTextBox"
                     FontSize="14"
                     TextWrapping="Wrap"
                     controls:TextBoxHelper.ClearTextButton="True" />
        </DockPanel>
    </Grid>

    <Grid Grid.Row="5" Grid.Column="0">
        <DockPanel LastChildFill="True">
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Height="25"
                       Content="Answer 5:"
                       DockPanel.Dock="Top"
                       FontWeight="Bold" />
                <CheckBox Name="Answer5CheckBox"
                          Grid.Column="2"
                          Checked="StyleCorrectCheckbox"
                          Content="Incorrect"
                          Foreground="Red"
                          Unchecked="StyleIncorrectCheckbox" />
            </Grid>
            <TextBox Name="AnswerFiveTextBox"
                     FontSize="14"
                     TextWrapping="Wrap"
                     controls:TextBoxHelper.ClearTextButton="True" />
        </DockPanel>
    </Grid>
</Grid>